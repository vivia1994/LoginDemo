
@{
    ViewBag.Title = "Index";
}

<h2>登录</h2>
<form role="form" action="/Home/Login">
    <div class="form-group">
        <label for="exampleInputEmail1">用户名</label>
        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="输入用户名" name="username">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">密码</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="请输入密码" name="password">
    </div>
    <button type="submit" class="btn btn-default">登录</button>
    <button type="reset" class="btn btn-default">重置</button>
</form>

